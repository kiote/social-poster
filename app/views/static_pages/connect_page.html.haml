!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Sign in &middot; Twitter Bootstrap
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Le styles
    %link{:href => "../assets/css/bootstrap.css", :rel => "stylesheet"}/
    :css
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
    %link{:href => "../assets/css/bootstrap-responsive.css", :rel => "stylesheet"}/
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="../assets/js/html5shiv.js"></script>
    / Fav and touch icons
    %link{:href => "../assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "../assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    %link{:href => "../assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    %link{:href => "../assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
    %link{:href => "../assets/ico/favicon.png", :rel => "shortcut icon"}/
  
  
  %body
    .container
      %form.form-signin{:action => "/static_pages/test"}
        / %h2.form-signin-heading Please sign in
        / %input.input-block-level{:placeholder => "Email address", :type => "text"}/
        / %input.input-block-level{:placeholder => "Password", :type => "password"}/
        / %label.checkbox
        /  %input{:type => "checkbox", :value => "remember-me"}/
        /  Remember me
        
        %button.btn.btn-large.btn-primary{:type => "submit", :name => "social_network[name]", :value => "Facebook" } Connect with Facebook
        %hr
        %button.btn.btn-large.btn-primary{:type => "submit", :name => "social_network[name]", :value => "LinkedIN" } Connect with LinkedIN
        %hr
        %button.btn.btn-large.btn-primary{:type => "submit", :name => "social_network[name]", :value => "Twitter" } Connect with Twitter
        %hr
        %button.btn.btn-large.btn-primary{:type => "submit", :name => "social_network[name]", :value => "VK" } Connect with VK
        
    / /container
