
- content_for :head do

  %title post to facebook  
  
.container.width_500
  
  %h1 congratulations, #{ @message };
  %h1 you came from #{ @social_network };
  %p _session #{ session[:social_network] };
  %p _params #{ params[:social_network][:name] };
  
  %ul.nav.nav-tabs
    - if @social_network == "Facebook"
      %li.active
        %a{:href => "/static_pages/post_message"} Facebook
      %li
        %a{:href => "/static_pages/post_message"} LinkedIN
      %li
        %a{:href => "/static_pages/post_message"} Twitter
      %li
        %a{:href => "/static_pages/post_message"} VK
        
    - if @social_network == "LinkedIN"
      %li
        %a{:href => "/static_pages/post_message"} Facebook
      %li.active
        %a{:href => "/static_pages/post_message"} LinkedIN
      %li
        %a{:href => "/static_pages/post_message"} Twitter
      %li
        %a{:href => "/static_pages/post_message"} VK
        
    - if @social_network == "Twitter"
      %li
        %a{:href => "/static_pages/post_message"} Facebook
      %li
        %a{:href => "/static_pages/post_message"} LinkedIN
      %li.active
        %a{:href => "/static_pages/post_message"} Twitter
      %li
        %a{:href => "/static_pages/post_message"} VK
        
    - if @social_network == "VK"
      %li
        %a{:href => "/static_pages/post_message"} Facebook
      %li
        %a{:href => "/static_pages/post_message"} LinkedIN
      %li
        %a{:href => "/static_pages/post_message"} Twitter
      %li.active
        %a{:href => "/static_pages/post_message"} VK
  
  
  %textarea.textarea{:placeholder => "Enter text ...", :style => "width: 500px; height: 200px"}
  %br
  %a.btn.btn-large.btn-primary.jumbo{:href => "#"} Post

%script{:src => "../assets/wysihtml5/js/wysihtml5-0.3.0.js"}
%script{:src => "../assets/bootstrap/js/jquery.js"}
%script{:src => "../assets/bootstrap/js/google-code-prettify/prettify.js"}
%script{:src => "../assets/bootstrap/js/bootstrap.min.js"}
%script{:src => "../assets/bootstrap-wysihtml5/js/bootstrap-wysihtml5.js"}

