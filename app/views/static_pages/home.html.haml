
- provide(:title, "Home")

- if signed_in?
  %div.row
    %aside.span4
      %section
        = render 'shared/user_info'
    
  .container
    .hero-unit
      
      %ul
        %li
          %a{:href => "#tabs-1"} Facebook
        %li
          %a{:href => "#tabs-2"} LinkedIN
        %li
          %a{:href => "#tabs-3"} Tumblr
        %li
          %a{:href => "#tabs-4"} Twitter
        %li
          %a{:href => "#tabs-5"} VK
          
      = render 'shared/message_form'

- else
  %div.center.hero-unit
    
    %h2
      = link_to "Sign up", signup_path, class: "btn btn-large btn-primary"
      _ability_to_send_messages_through_networks_
      = link_to "Sign up", signup_path, class: "btn btn-large btn-primary"
      
  = link_to image_tag("social_poster.png", alt: "SocialPoster"), 'http://social-poster.herokuapp.com'

:javascript
  $('.textarea').wysihtml5();

