
- provide(:title, "Home")

- if signed_in?
  %div.row
    %aside.span4
      %section
        = render 'shared/user_info'
        = render 'shared/message_form'
        
    %div.span8
      %h4 Authorisations
      %p
        connect
        %a{href: '/auth/twitter'} Twitter
        %a{href: '/auth/facebook'} Facebook
        %a{href: '/auth/linkedin'} LinkedIn
        %a{href: '/auth/vkontakte'} Vkontakte
        %p/
        
      - if current_user.authorisations.any?
        %ol.authorisations
          = render current_user.authorisations
- else
  %div.center.hero-unit
    
    %h2
      = link_to "Sign up", signup_path, class: "btn btn-large btn-primary"
      _ability_to_send_messages_through_networks_
      = link_to "Sign up", signup_path, class: "btn btn-large btn-primary"
      
  = link_to image_tag("social_poster.png", alt: "SocialPoster"), 'http://social-poster.herokuapp.com'
  
